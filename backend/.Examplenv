# Server port
PORT=3000

# MongoDB connection settings
# Primary connection string (preferred)
MONGODB_URI=mongodb://localhost:27017/veefriends-game
# Or, use individual connection parameters (used if MONGODB_URI is not set)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=veefriends-game
MONGODB_USER=yourusername
MONGODB_PASSWORD=yourpassword
MONGODB_AUTH_SOURCE=admin

# Security settings
JWT_SECRET=your-secure-secret-key-change-in-production
JWT_EXPIRY=7d

# Application settings
NODE_ENV=development # Change to 'production' for deployment
FRONTEND_URL=http://localhost:19000 # If needed for CORS

# Optional: For rate limiting (protects against DoS attacks)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000 # 1 minute

# Optional: For logging
LOG_LEVEL=info # Values: error, warn, info, verbose, debug
